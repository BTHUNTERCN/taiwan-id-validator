{
  "name": "taiwan-id-validator",
  "version": "0.0.9",
  "description": "中華民國統一編號、身分證字號驗證規則、電子發票號碼等規則驗證",
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.json --fix src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test": "jest --silent",
    "test:log": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enylin/taiwan-id-validator"
  },
  "keywords": [
    "中華民國",
    "台灣",
    "E-Invoice",
    "Tawian",
    "ES6",
    "Typescript",
    "電子發票",
    "統一編號",
    "身分證字號",
    "自然人憑證",
    "手機條碼",
    "捐贈碼",
    "愛心碼",
    "ARC",
    "APRC"
  ],
  "author": {
    "name": "enylin",
    "email": "sean.enylin@gmail.com"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^27.0.5",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm t"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,css}": [
      "tslint --fix",
      "npm run format",
      "git add"
    ]
  }
}
